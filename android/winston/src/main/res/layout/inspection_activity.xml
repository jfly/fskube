<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/inspection_enter_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="25sp"
        android:text="@string/inspection_enter_message"/>

    <TextView
        android:id="@+id/inspection_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/green"
        android:visibility="gone"
        android:textAppearance="@style/InspectionDisplayTextStyle"/>

    <TextView
        android:id="@+id/inspection_dnf_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/dark_red"
        android:textAppearance="@style/InspectionDisplayTextStyle"
        android:text="@string/inspection_dnf_message"/>

</FrameLayout>